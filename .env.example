# ==============================================
# UNSCROLL - Environment Variables Template
# ==============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# Firebase Configuration (Client-side - these are public)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (Server-side - keep these SECRET)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# OpenAI Configuration  
OPENAI_API_KEY=sk-your-openai-api-key-here

# Demo Mode Configuration (server-side only - password never exposed to browser)
DEMO_USER_EMAIL=demo@unscroll.app
DEMO_USER_PASSWORD=your-secure-demo-password
NEXT_PUBLIC_DEMO_EMAIL=demo@unscroll.app

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
